version: '2'

services:
    frontend:
        volumes:
            - $HOME/.npm:/home/frontend/.npm
    app:
        volumes:
            - $HOME/.composer/cache:/var/www/.composer/cache

    blackfire:
        environment:
            BLACKFIRE_CLIENT_ID:
            BLACKFIRE_CLIENT_TOKEN:
            BLACKFIRE_SERVER_ID:
            BLACKFIRE_SERVER_TOKEN:
